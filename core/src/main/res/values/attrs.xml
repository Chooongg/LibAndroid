<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自动文字大小调整 -->
    <declare-styleable name="AutoSizeTextView">
        <attr name="ast_autoSizeEnable" format="boolean" />
        <attr name="ast_minTextSize" format="dimension" />
        <attr name="ast_precision" format="float" />
    </declare-styleable>

    <!-- 重力粘性对齐RecyclerView -->
    <declare-styleable name="GravitySnapRecyclerView">
        <attr name="snapGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="top" value="1" />
            <enum name="end" value="2" />
            <enum name="bottom" value="3" />
            <enum name="center" value="4" />
        </attr>
        <attr name="snapEnabled" format="boolean" />
        <attr name="snapLastItem" format="boolean" />
        <attr name="snapToPadding" format="boolean" />
        <attr name="snapScrollMsPerInch" format="float" />
        <attr name="snapMaxFlingSizeFraction" format="float" />
    </declare-styleable>

    <!-- 状态布局 -->
    <declare-styleable name="StateLayout">
        <attr name="beginningSuccess" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TopAppBarLayout">
        <attr name="setActionBar" format="boolean" />
        <attr name="heightMode" format="enum">
            <enum name="small" value="0" />
            <enum name="medium" value="1" />
            <enum name="large" value="2" />
        </attr>
        <attr name="syncStatusBarColor" format="boolean" />

        <attr name="title" />
        <attr name="titleCentered" />
        <attr name="titleTextColor" />
        <attr name="titleMargin" />
        <attr name="titleMarginStart" />
        <attr name="titleMarginEnd" />
        <attr name="titleMarginTop" />
        <attr name="titleMarginBottom" />
        <attr name="titleMargins" />
        <attr name="titleTextAppearance" />
        <attr name="subtitle" />
        <attr name="subtitleCentered" />
        <attr name="subtitleTextColor" />
        <attr name="subtitleTextAppearance" />
        <attr name="android:gravity" />
        <attr name="contentInsetStart" />
        <attr name="contentInsetEnd" />
        <attr name="contentInsetLeft" />
        <attr name="contentInsetRight" />
        <attr name="contentInsetStartWithNavigation" />
        <attr name="contentInsetEndWithActions" />
        <attr name="maxButtonHeight" />
        <attr name="buttonGravity" />
        <attr name="collapseIcon" />
        <attr name="collapseContentDescription" />
        <attr name="navigationIcon" />
        <attr name="navigationIconTint" />
        <attr name="navigationContentDescription" />
        <attr name="logo" />
        <attr name="logoDescription" />
        <attr name="logoAdjustViewBounds" />
        <attr name="logoScaleType" />
        <attr name="menu" />
        <attr name="popupTheme" />

        <attr name="expanded" />
        <attr name="android:keyboardNavigationCluster" />
        <attr name="android:touchscreenBlocksFocus" />
        <attr name="liftOnScroll" />
        <attr name="liftOnScrollTargetViewId" />
        <attr name="liftOnScrollColor" />
        <attr name="statusBarForeground" />

        <attr name="expandedTitleMargin" />
        <attr name="expandedTitleMarginStart" />
        <attr name="expandedTitleMarginTop" />
        <attr name="expandedTitleMarginEnd" />
        <attr name="expandedTitleMarginBottom" />
        <attr name="expandedTitleTextAppearance" />
        <attr name="collapsedTitleTextAppearance" />
        <attr name="titleTextEllipsize" />
        <attr name="expandedTitleTextColor" />
        <attr name="collapsedTitleTextColor" />
        <attr name="contentScrim" />
        <attr name="statusBarScrim" />
        <attr name="toolbarId" />
        <attr name="scrimVisibleHeightTrigger" />
        <attr name="scrimAnimationDuration" />
        <attr name="collapsedTitleGravity" />
        <attr name="expandedTitleGravity" />
        <attr name="titleEnabled" />
        <attr name="titleCollapseMode" />
        <attr name="maxLines" />
        <attr name="forceApplySystemWindowInsetTop" />
        <attr name="extraMultilineHeightEnabled" />
        <attr name="titlePositionInterpolator" />
    </declare-styleable>

    <!-- 宽高比布局 -->
    <!-- 宽高比例 -->
    <attr name="sizeRatio" format="string" />
    <declare-styleable name="RatioView">
        <attr name="sizeRatio" />
    </declare-styleable>
    <declare-styleable name="RatioCardView">
        <attr name="sizeRatio" />
    </declare-styleable>
    <declare-styleable name="RatioConstraintLayout">
        <attr name="sizeRatio" />
    </declare-styleable>
    <declare-styleable name="RatioFrameLayout">
        <attr name="sizeRatio" />
    </declare-styleable>

    <!-- 垂直显示文字控件 -->
    <declare-styleable name="VerticalTextView">
        <attr name="direction">
            <enum name="upToDown" value="0" />
            <enum name="downToUp" value="1" />
            <enum name="leftToRight" value="2" />
            <enum name="rightToLeft" value="3" />
        </attr>
    </declare-styleable>

</resources>